---
import Layout from "../layouts/Layout.astro";
import SocialIcon from "../components/header/SocialIcon.astro";
import ProfileImage from "../components/header/ProfileImage.astro";
import SkillsSection from "../components/sectionsComponents/SkillsSection.astro";
import ProjectsSection from "../components/sectionsComponents/ProjectsSection.tsx";
import ExperienceSection from "../components/sectionsComponents/ExperienceSection.astro";
import StudiesSection from "../components/sectionsComponents/StudiesSection.astro";
import AboutMeSection from "../components/sectionsComponents/AboutMeSection.astro";
import ContactMeSection from "../components/sectionsComponents/ContactMeSection.tsx";
import '../components/ImgTheme.css';

import GithubIcon from '../assets/icons/githubIcon.png';
import LinkedinIcon from '../assets/icons/linkedinIcon.png';
---

<Layout title="My Portfolio">
  <header>
    <div class="flex flex-col lg:flex-row justify-center items-center px-4 space-y-4 lg:space-y-0 lg:space-x-4">
      <div class="text-center lg:text-left max-w-md lg:max-w-xl">
        <h1 class="text-2xl lg:text-4xl font-bold">FULL STACK DEVELOPER</h1>
        <h2 translate="no" class="text-2xl lg:text-4xl font-bold text-sec-color mt-2 lg:ml-3">
          PABLO DE LA CRUZ GÓMEZ
        </h2>
        <p class="text-base lg:text-xl mt-2 lg:ml-5">Dénia, Alicante, Spain</p>  

        <div class="flex justify-center lg:justify-start space-x-4 mt-3 lg:mt-2 lg:ml-4">
          <SocialIcon src={GithubIcon} alt="Github Icon" href="https://github.com/PabloDeLaCruzG" />
          <SocialIcon src={LinkedinIcon} alt="Linkedin Icon" href="https://www.linkedin.com/in/pablo-de-la-cruz-0b1278226/" />
        </div>
      </div>

      <div class="mt-6 lg:mt-8 max-w-[100px] sm:max-w-xs">
        <ProfileImage />
      </div>
    </div>

    <hr class="border-gray-600 mx-auto w-4/5 lg:w-auto lg:mx-32" />
  </header>

  <main class="mt-5 mx-auto w-full sm:w-11/12 md:w-3/4 lg:w-3/5 xl:w-2/4 px-4 relative">
    <AboutMeSection />
    <ProjectsSection client:load/>
    <SkillsSection />
    <ExperienceSection />
    <StudiesSection />
    <ContactMeSection client:load />
  </main>  

  <footer class="mt-16 m-4 relative">
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
      <div>
        <hr
          class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"
        />
      </div>
      <div class="flex flex-col lg:flex-row justify-between items-center lg:mx-5">
        <p class="text-sm text-gray-500 sm:text-center dark:text-gray-400">✉️ pablodelacruzgomez48@gmail.com</p>
        <span
          class="block text-sm text-gray-500 sm:text-center dark:text-gray-400 order-last lg:order-none text-center"
          translate="no"
        >
        
          © 2024 Pablo De La Cruz Gómez™. All Rights Reserved.
        </span>
        <p class="text-sm text-gray-500 sm:text-center dark:text-gray-400">☎️ +34 665 01 60 03</p>
      </div>

      <button
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
        class="fixed bottom-8 right-8 bg-sec-color text-white p-3 rounded-full shadow-md hover:bg-sec-color-dark transition-transform transform hover:scale-110"
      >
        <svg
          class="w-6 h-6"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M16.707 11.707a1 1 0 01-1.414 0L10 6.414l-5.293 5.293a1 1 0 01-1.414-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 010 1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
  </footer>
</Layout>